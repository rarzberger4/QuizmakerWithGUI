<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizmakerwithgui.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

          <Label text="Quizmaker">
      <font>
         <Font name="SansSerif Bold" size="39.0" />
      </font>
   </Label>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onStartGameButtonClick" text="Start Game" />
         <Button mnemonicParsing="false" onAction="#onHighScoreButtonClick" text="Highscore" />
         <Button fx:id="quitbutton" mnemonicParsing="false" onAction="#onQuitButtonClick" text="Quit" />
      </children>
   </VBox>
   <TextArea fx:id="welcomeText" editable="false" prefHeight="200.0" prefWidth="200.0" text="Hello and welcome to the Quizmaker!&#10;&#10;This is a Project done by Team Bermuda!&#10;&#10;&#10;Enjoy!!!">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></TextArea>
</VBox>
